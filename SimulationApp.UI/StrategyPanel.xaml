<UserControl x:Class="SimulationApp.UI.StrategyPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto">
    <StackPanel Orientation="Horizontal">
        <Label Content="Select Strategy:"/>
        <ComboBox Width="200" Name="StrategyDropdown" SelectedIndex="0">
            <ComboBoxItem Content="Strategy Random"/>
            <ComboBoxItem Content="Strategy Bulk"/>
        </ComboBox>
        <Button Content="Start Simulation" Click="StartSimulation_Click"/>
    </StackPanel>
</UserControl>