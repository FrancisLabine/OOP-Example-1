<UserControl x:Class="SimulationApp.UI.SimulationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row for Start button -->
            <RowDefinition Height="*"/>
            <!-- Row for canvas -->
        </Grid.RowDefinitions>

        <!-- Canvas where simulation will be drawn -->
        <Canvas x:Name="SimulationCanvas" Grid.Row="1" Background="White"/>
    </Grid>
</UserControl>
